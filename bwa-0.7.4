# bwa 0.7.4

FROM ubuntu:14.04
MAINTAINER Isaac Liao <iliao@stanford.edu>

# Unfortunately this version is not in apt-get or git, so download from Sourceforge and build it ourselves.
# These commands are all chained together so that only one layer is created, minimizing final image size.
RUN apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get -y install \
        gcc \
        make \
        wget \
        zlib1g-dev && \

    # Download, extract, compile
    cd /tmp && \
    wget http://sourceforge.net/projects/bio-bwa/files/bwa-0.7.4.tar.bz2 && \
    tar -xf bwa-0.7.4.tar.bz2 && \
    cd /tmp/bwa-0.7.4 && \
    make && \
    cp bwa /bin && \

    # Clean up
    DEBIAN_FRONTEND=noninteractive apt-get -y autoremove \
        gcc \
        make \
        wget \
        zlib1g-dev && \
    cd /tmp && \
    rm bwa-0.7.4.tar.bz2 && \
    rm -rf bwa-0.7.4
